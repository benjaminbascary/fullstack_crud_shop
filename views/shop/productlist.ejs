<%- include('../partials/head.ejs') %>

<body>
  <header class="header--container">
    <%- include('../partials/navigation.ejs') %> 
  </header>
  <main class="main-container">
    <h1 class="title add-product"><%= pageTitle %> </h1>
    <div class="products--container">
      <% if (products.length > 0) { %>
          <% for (let product of products) { %> 
            <div class="single--product--container">
              <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
              <p><%= product.name %></p>
              <p>Description: <%= product.description %> </p>
              <p>Price: <%= product.price %> </p>
              <div>
                <a href="/products/<%= product.id %>">Details</a>
                <form action="/cart" method="POST">
                  <button type="submit">Add to cart</button>
                  <input type="hidden" name="id" value="<%= product.id %>">
                </form>
                <!-- <form action="/fullcart" method="POST">
                  <button>Add to full-cart</button>
                  <input type="hidden" name="fullProduct" value="<%= product %> ">
                  <input type="hidden" name="id" value="<%= product.id %>">
                </form> -->
              </div>
            </div>
          <% } %> 
      <% } else { %>
        <div class="products--container">
          <h2>Oops! Looks like there is no products to be shown! :(</h2>
        </div>
      <% } %>   
    </div>
  </main>
</body>
</html>