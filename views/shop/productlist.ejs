<%- include('../partials/head.ejs') %>

<body>
  <header class="header--container">
    <nav>
      <ul class="header--nav--list">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/products">Products</a>
        </li>
        <li>
          <a href="/cart">Cart</a>
        </li>
        <li>
          <a href="/admin/addproduct">Admin - Add a new product</a>
        </li>
        <li>
          <a href="/admin/product-list">Admin - Product List</a>
        </li>
      </ul>
    </nav>
  </header>
  <main class="main container">
    <h1 class="title add-product">Welcome to the shop's main page!</h1>
    <div class="products--container">
      <% if (products.length > 0) { %>
          <% for (let product of products) { %> 
            <div class="single--product--container">
              <p>Title: <%= product.name %></p>
              <p>Price: <%= product.price %> </p>
              <p>ID: <%= product._id %> </p>
              <div>
                <a href="/products/<%= product.id %>">Details</a>
                <form action="/cart" method="POST">
                  <button type="submit">Add to cart</button>
                  <input type="hidden" name="id" value="<%= product._id %>">
                </form>
                <form action="/products/<%= product.id %>">
                  <button type="submit">Details</button>
              </form>
              </div>
            </div>
          <% } %> 
      <% } else { %>
        <div class="products--container">
          <h2>Oops! Looks like there is no products to be shown! :(</h2>
        </div>
      <% } %>   
    </div>
  </main>

</body>
</html>