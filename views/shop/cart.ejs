<%- include('../partials/head.ejs') %>

<body>
<header class="header--container">
    <nav>
      <ul class="header--nav--list">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/products">Products</a>
        </li>
        <li>
          <a href="/cart">Cart</a>
        </li>
        <li>
          <a href="/admin/addproduct">Admin - Add a new product</a>
        </li>
        <li>
          <a href="/admin/product-list">Admin - Product List</a>
        </li>
      </ul>
    </nav>
  </header>
  <main class="main container">
    <h1 class="title">Cart</h1>
    <div class="products--container">
      <% if (products.length > 0) { %>
          <% for (let product of products) { %>
            <div class="cart--single--product--container">
            <img src="<%= product.imageUrl %>" alt="<%= product.name %> ">
              <h3><%= product.name %></h3>
              <p>$ <%= product.price %></p>
              <p>Qty: <%= product.cartItem.quantity %> </p>
              <p>SKU: <%= product.id %></p>
              <form action="./cart/deleteitem" method="POST">
                <input type="hidden" name="id" value="<%= product.id %>">
                <input type="hidden" name="price" value="<%= product.price %> ">
                <button class="button" type="submit">DELETE ITEM</button>
              </form>
            </div>
            
          <% } %>
          <button>
            <a href="./checkout">Confirm and checkout!</a>
          </button>
          <% } else { %>
            <div class="products--container">
              <h2>No products in database</h2>
            </div>
          <% } %>   
    </div>
    
  </main>
</body>
</html>